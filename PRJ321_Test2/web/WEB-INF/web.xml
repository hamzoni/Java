<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountListController</servlet-name>
        <servlet-class>Controller.Account.AccountListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountUpdateController</servlet-name>
        <servlet-class>Controller.Account.AccountUpdateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountDeleteController</servlet-name>
        <servlet-class>Controller.Account.AccountDeleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountCreateController</servlet-name>
        <servlet-class>Controller.Account.AccountCreateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>Controller.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/auth/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountListController</servlet-name>
        <url-pattern>/account/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountUpdateController</servlet-name>
        <url-pattern>/account/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountDeleteController</servlet-name>
        <url-pattern>/account/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountCreateController</servlet-name>
        <url-pattern>/account/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
